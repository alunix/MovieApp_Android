<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rss_details"
    tools:context="com.mycompany.tuts.DisplayDetailsRss" >

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/toolbar_shadow"
        android:elevation="12dp"
        android:clipToPadding="false"/>

    <Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:popupTheme="@style/MyCustomToolbarTheme"
        android:background="?android:attr/colorPrimary" />

    <include android:id="@+id/app_bar" layout="@layout/app_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"  >

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/frame_1"
            android:layout_height="wrap_content"
            android:background= "#fff"
            android:elevation= "8dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:text="@string/placeholder"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_titles"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="left|bottom" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background= "#fff"
            android:elevation= "8dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:text="@string/placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/text_details"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp" />

            </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background= "#fff"
            android:elevation= "8dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView android:text="@string/placeholder" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_link"
                android:textColor="@color/black"
                android:layout_margin="3dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background= "#fff"
            android:elevation= "8dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <TextView
                android:text="@string/placeholder" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_pub_date"
                android:textColor="@color/black"
                android:layout_margin="3dp" />

            </FrameLayout>

            <RelativeLayout android:id="@+id/RelativeLayout01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background= "@color/white"
                android:elevation="12dp"
                android:layout_gravity="center_horizontal"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="10dp"
                android:layout_marginTop="20dp" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enterSite"
                    android:id="@+id/button_link"
                    android:textColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="1.5"
                    android:shadowColor="#7F000000"
                    android:textSize="14sp"
                    android:elevation="12dp"
                    android:layout_margin="3dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
</ScrollView>